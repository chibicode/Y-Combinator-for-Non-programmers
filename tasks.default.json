{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Monitor TS Errors",
      "command": "./node_modules/.bin/tsc",
      "type": "shell",
      "args": ["--watch", "--project", "."],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "Build",
      "dependsOn": ["Monitor TS Errors", "eslint: lint whole folder"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
