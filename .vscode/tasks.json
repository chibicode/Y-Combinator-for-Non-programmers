{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "tsc watch",
      "command": "./node_modules/.bin/tsc",
      "args": ["-w"],
      "problemMatcher": ["$tsc-watch"],
      "isBackground": true,
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "shell",
      "label": "tsc watch (scripts)",
      "command": "./node_modules/.bin/tsc",
      "args": ["-p", "tsconfig.scripts.json", "-w"],
      "problemMatcher": ["$tsc-watch"],
      "isBackground": true,
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "shell",
      "command": "yarn",
      "args": ["precompute", "${input:key}"],
      "label": "Precompute",
      "problemMatcher": [],
      "presentation": {
        "showReuseMessage": false,
        "reveal": "silent"
      }
    }
  ],
  "inputs": [
    {
      "id": "key",
      "description": "key:",
      "default": "",
      "type": "promptString"
    }
  ]
}
